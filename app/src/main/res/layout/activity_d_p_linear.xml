<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/d_p_linear"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:layout_below="@+id/d_p_tv">

    <Button
        android:id="@+id/d_p_linear_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/d_p_start"/>
    <Button
        android:id="@+id/d_p_linear_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/d_p_stop"/>
    <Button
        android:id="@+id/d_p_linear_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/d_p_reset"/>

</LinearLayout>